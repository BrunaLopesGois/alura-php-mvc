{
    "autoload": {
        "psr-4": {
            "Alura\\Cursos\\": "src/"
        }
    },
    "require": {
        "nyholm/psr7": "^1.3",
        "nyholm/psr7-server": "^1.0",
        "php-di/php-di": "^6.3",
        "psr/http-server-handler": "^1.0",
        "doctrine/orm": "2.9",
        "symfony/cache": "^5.3"
    },
    "require-dev": {
        "doctrine/annotations": "^1.13",
        "symfony/console": "^5.3",
        "behat/behat": "^3.8",
        "behat/mink": "^1.8",
        "behat/mink-extension": "^2.3",
        "behat/mink-goutte-driver": "^1.2"
    },
    "scripts": {
        "behat": "php vendor/bin/behat",
        "behat-generate": "php vendor/bin/behat --append-snippets --dry-run",
        "behat-generate-to": "php vendor/bin/behat --append-snippets --dry-run --snippets-for=",
        "behat-unit": "php vendor/bin/behat -s unidade",
        "behat-integration": "php vendor/bin/behat -s integracao",
        "behat-e2e": "php vendor/bin/behat -s e2e"
    }
}
